<!doctype html>
<html lang="en">
  <head>
  	<title><%= title %></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src='https://kit.fontawesome.com/a076d05399.js'></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="stylesheets/style.css">
    <link rel="stylesheet" href="stylesheets/mystyle.css">
    <link rel="stylesheet" href="stylesheets/styles.css">
    <!-- <link rel="icon" href="favicon.png"> -->
  </head>
  <body>
    <% if(currentUser){ %>
		<div class="wrapper d-flex align-items-stretch">
			<nav id="sidebar">
				<div class="p-4 pt-5">
		  		<a href="#" class="img logo mb-5" style="background-image: url(logo.jpg);"></a>
	        <ul class="list-unstyled components mb-5">
            <% if(currentUser.username == 'manager'){ %>
            <li>
	            <a href="/items">Inventory</a>
              </li>
              <li>
	            <a href="/issue">Issue Item</a>
              </li>
              <li>
                <a href="/rcbook">RC Book</a>
                </li>
              <li>
                <a href="/inventoryregister">Inventory Register</a>
                </li>
                <% } else if(currentUser.username == 'supervisor') { %>
                  <li>
                    <a href="/supervisor">Approve Request</a>
                  </li>
                  <% } else if(currentUser.username == 'admin') { %>
                    <li>
                      <a href="/createuser">Create User</a>
                    </li>
                    <li>
                      <a href="/createitem">Add Item</a>
                    </li>
                    <% } %>
            <li>
              <a href="/logout">Log Out</a>
	          </li>

	        </ul>

	      </div>
    	</nav>

        <!-- Page Content  -->
        
      <div id="content" class="p-4 p-md-5">
        <% if(error && error.length > 0){ %>
          <div class="alert alert-danger"  role="alert" style="mb-3;"><%= error %></div>
        <% }else if(success && success.length > 0){ %>
          <div class="alert alert-success"  role="alert" style="mb-3;"><%= success %></div>
        <% } %>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
          <div class="container-fluid">
            <h1 class="m-0">NHMP Inventory Management System</h1>
          </div>
        
        </nav>
        
        <% } else { %>
          <div class="container" style="margin-top:10px;">
          <% if(error && error.length > 0){ %>
            <div class="alert alert-danger"  role="alert"><%= error %></div>
          <% }else if(success && success.length > 0){ %>
            <div class="alert alert-success"  role="alert"><%= success %></div>
            <% } %>
          </div>
          <% }  %>
          

